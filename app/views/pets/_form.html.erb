<% if local_assigns.has_key? :user %>
  <%= form_for [user, pet] do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name %><br>
    <%= f.label :nickname %>
    <%= f.text_field :nickname %><br>
    <%= f.label :animal %>
    <%= f.text_field :animal %><br>
    <%= f.label :age %>
    <%= f.number_field :age %><br>
    <%= f.label :breed %>
    <%= f.text_field :breed %><br>
    <%= f.label "Any stories or info you'd like to share?" %><br>
    <%= f.text_area :info %><br>

    <% if current_employee %>
      <%= f.hidden_field :owner_id, value: current_employee.shelter.id %>
      <%= f.hidden_field :owner_type, value: "Shelter" %>
      <%= f.label "Which employee(s) will primarily take care of this animal?" %>
      <%= f.collection_check_boxes :employee_ids, current_employee.shelter.employees, :id, :username %>
    <% elsif current_user %>
      <%= f.hidden_field :owner_id, value: current_user.id %>
      <%= f.hidden_field :owner_type, value: "User" %>
    <% end %>

    <%= f.submit class: "btn btn-light border-secondary mb-3", id: "pet-submit", data: { disable_with: false } %>
  <% end %>
<% else %>
  <%= form_for pet do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name %><br>
    <%= f.label :nickname %>
    <%= f.text_field :nickname %><br>
